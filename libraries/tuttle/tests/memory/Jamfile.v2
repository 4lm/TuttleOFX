import testing ;

###############################################################################
# compile the test and run it
###############################################################################

project 
    : requirements	<define>BOOST_TEST_MAIN
					<threading>multi
    ;

path-constant MEMORY_PATH : ../../src/tuttle/host/core/memory ;

alias dependencies
    : 
		/boost//unit_test_framework
		[ glob $(MEMORY_PATH)/*.cpp ]
    :
    		<include>$(MEMORY_PATH)
    ; 

run   main.cpp dependencies ;
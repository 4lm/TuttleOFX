import regex ;

local rule check-required-env ( var ) {
	if ! $($(var)) {
		EXIT Missing variable $(var) ;
	}
}

rule evaluate-if-header-is-available ( properties * : context )
{
	local conditions = [ regex.split $(context) , ] ;
	local out ;

	for local c in $(conditions)
	{
		if [ path.exists $(c) ]
		{
			echo $(c) "= found" ;
			out = $(properties) ;
		}
		else
		{
			echo $(c) "= not found" ;
		}


	}
	return $(out) ;
}

###############################################################################
## Main BJam makefile for TuttleOFX Merge Plugin
###############################################################################
import os ;

###############################################################################
# Global project requirements
###############################################################################
project
	: requirements
		<include>src
	: build-dir $(BUILD)/Merge
	;

###############################################################################
# Product 
###############################################################################
plugin Merge :
		[ glob src/*.cpp ]
		/tuttleplugin/<link>static
	;

###############################################################################
# Automatic install
###############################################################################
auto_install Merge : $(DIST) ;

###############################################################################
## Main BJam makefile for TuttleOFX FFMpeg Plugin
###############################################################################
import os ;

###############################################################################
# Global project requirements
###############################################################################
project
    : requirements	
				<include>src
  				<threading>multi 
  				<os>NT:<define>_WINDOWS
    : build-dir $(DIST)/plugins/FFMpeg/obj
    ;

###############################################################################
# Dependencies
###############################################################################
if [ os.name ] = NT	
	{	lib opengl32 ; 	alias opengl : opengl32 ; }
else if [ os.name ] = LINUX 
	{	alias opengl : ; }
else if [ os.name ] = MACOSX 
	{	alias opengl : : : : <linkflags>"-framework OpenGL" ; }

###############################################################################
# Product 
###############################################################################
plugin FFMpeg : 
    [ glob src/*.cpp ]
    /tuttlelib//tuttleplugin/<link>static
    /supportlib
    opengl
    ;

###############################################################################
# Automatic install
###############################################################################
alias install : install-plug ;
install install-plug
	:	FFMpeg
	:	<os>NT:<location>$(DIST)/plugins/FFMpeg/bundle/FFMpeg.ofx.bundle/Contents/Win32
		<os>LINUX:<location>$(DIST)/plugins/FFMpeg/bundle/FFMpeg.ofx.bundle/Contents/Linux
		<os>MACOSX:<location>$(DIST)/plugins/FFMpeg/bundle/FFMpeg.ofx.bundle/Contents/MacOS
	;


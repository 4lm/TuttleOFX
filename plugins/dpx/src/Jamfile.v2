###############################################################################
## Main BJam makefile for TuttleOFX dpx Plugin
## author Eloi Du Bois
###############################################################################
import os ;

###############################################################################
# Global project requirements
###############################################################################
project
    : requirements
        <include>src
        <include>../../../libraries/tuttle/src/
        <threading>multi
        <os>NT:<define>_WINDOWS
        <toolset>msvc:<define>_SCL_SECURE_NO_WARNINGS
    : build-dir $(DIST)/plugins/dpx/obj
    ;

use-project /png 	: ../../../3rdParty/libpng ;

###############################################################################
# Dependencies
###############################################################################

###############################################################################
# Product 
###############################################################################
plugin dpx : 
        [ glob-tree *.cpp ]
        /tuttlelib//tuttleplugin/<link>static
        /png/<link>static
        /supportlib/<link>static
        /boost/filesystem/<link>static
        ;

###############################################################################
# Automatic install
###############################################################################
alias install : install-plug ;
install install-plug
	:	dpx
	:	<os>NT:<location>$(DIST)/plugins/dpx/bundle/dpx.ofx.bundle/Contents/Win32
		<os>LINUX:<location>$(DIST)/plugins/dpx/bundle/dpx.ofx.bundle/Contents/Linux
		<os>MACOSX:<location>$(DIST)/plugins/dpx/bundle/dpx.ofx.bundle/Contents/MacOS
	;


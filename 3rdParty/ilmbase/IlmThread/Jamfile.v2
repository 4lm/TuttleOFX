project IlmThread
	: requirements
		<warnings-as-errors>off
		<warnings>off
	: usage-requirements
		<include>.
	;

alias plateformFiles : [ glob *Posix*.cpp ] : <os>LINUX ;
alias plateformFiles : [ glob *Win32*.cpp ] : <os>NT ;
alias plateformFiles : [ glob *Posix*.cpp ] : <os>MACOS ;


lib IlmThread
	:
		IlmThread.cpp
		IlmThreadMutex.cpp
		IlmThreadPool.cpp
		IlmThreadSemaphore.cpp
		$(plateformFiles)
		../Iex//Iex
	;

install dist
	:
		IlmThread
	:
		<location>$(DIST)/lib
		<install-type>LIB
	;
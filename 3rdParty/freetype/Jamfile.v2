###############################################################################
## Main BJam makefile for freetype library
###############################################################################

###############################################################################
# Global project requirements
###############################################################################
project
	: requirements	
		<include>include
		<include>include/freetype
		<include>builds/unix
		<define>FT2_BUILD_LIBRARY
		<os>LINUX:<cxxflags>-fPIC
		# disabling warning as error as we are not responsible for this code
		<warnings-as-errors>off
		<warnings>off
	: usage-requirements
		<include>include
	: build-dir $(DIST)/3rdParty/Magick++/obj
    ;

###############################################################################
# libraw library
###############################################################################
alias	headers		: [ glob-tree *.h ] ;

lib	freetype		:
			  [
			    glob	src/autofit/*.c
					src/base/*.c
					src/bdf/*.c
					src/cache/*.c
					src/cff/*.c
					src/cid/*.c
					src/gxvalid/*.c
					src/gzip/ftgzip.c
					src/lzw/*.c
					src/otvalid/*.c
					src/pcf/*.c
					src/pfr/*.c
					src/psaux/*.c
					src/pshinter/*.c
					src/psnames/*.c
					src/raster/*.c
					src/sfnt/*.c
					src/smooth/*.c
					src/tools/apinames.c
					src/truetype/*.c
					src/type1/*.c
					src/type42/*.c
					src/winfonts/*.c
				:
			    src/autofit/aflatin2.c
			    src/autofit/autofit.c
			    src/base/ftmac.c
			    src/base/ftbase.c
			    src/base/ftdbgmem.c
			    src/bdf/bdf.c
			    src/cache/ftcache.c
			    src/cff/cff.c
			    src/cid/type1cid.c
			    src/gxvalid/gxvalid.c
			    src/gxvalid/gxvfgen.c
			    #src/gzip/ftgzip.c
			    #src/lzw/ftlzw.c
			    src/lzw/ftzopen.c
			    src/otvalid/otvalid.c
			    src/pcf/pcf.c
			    src/pfr/pfr.c
			    src/psaux/psaux.c
			    src/pshinter/pshinter.c
			    src/psnames/psnames.c
			    src/raster/raster.c
			    src/sfnt/sfnt.c
			    src/sfnt/ttsbit0.c
			    src/smooth/smooth.c
			    #src/tools/apinames.c
			    src/truetype/truetype.c
			    src/type1/type1.c
			    src/type42/type42.c
				]
			:
			<implicit-dependency>include/freetype/fttypes.h
			;

install	dist_src	: freetype
			: <variant>debug:<location>$(DIST)/3rdParty/freetype/bin/debug
			  <variant>release:<location>$(DIST)/3rdParty/freetype/bin/release
			;

###############################################################################
## Main BJam makefile for libexpat library
## author Eloi Du Bois
###############################################################################

###############################################################################
# Global project requirements
###############################################################################
project
    : requirements	
        <include>lib
        <threading>multi 
        #<define>COMPILED_FROM_DSP
        #<define>MACOS_CLASSIC
        <define>HAVE_BCOPY
        <define>XML_STATIC
        <link>static
    : usage-requirements
        <include>lib
        <define>HAVE_BCOPY
        <define>XML_STATIC
    : build-dir $(DIST)/lib/expat
    ;

###############################################################################
# libexpat library
###############################################################################
alias headers : [ glob-tree *.h ] ;

lib expat : 
    [ glob lib/*.c ]
    ;


install dist_src
	:	expat
	:	<variant>debug:<location>$(DIST)/lib/expat/debug
		<variant>release:<location>$(DIST)/lib/expat/release
	;

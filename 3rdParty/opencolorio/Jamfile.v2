###############################################################################
## Main BJam makefile for libopencolorio library
###############################################################################

###############################################################################
# Global project requirements
###############################################################################
project
	: requirements
		<include>export
		<include>src/core

		# disabling warning as error as we are not responsible for this code
		<warnings-as-errors>off
		<warnings>off
	: usage-requirements
		<include>.
		<include>src/include
	: build-dir $(BUILD)/3rdParty/opencolorio
    ;

###############################################################################
# libraw library
###############################################################################
alias	headers		:
			 [ glob-tree *.h ]
			;


lib	opencolorio	:
			 [ glob
			       src/core/*.cpp		    
			 ]
			 ../yaml
			 ../tinyxml
			 :
			  <link>static
			;

install dist
	:
		opencolorio
	:
		<variant>debug:<location>$(DIST_DEBUG)/lib
		<variant>release:<location>$(DIST_RELEASE)/lib
		<install-type>LIB
	;

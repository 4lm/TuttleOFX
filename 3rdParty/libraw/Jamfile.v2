###############################################################################
## Main BJam makefile for libpng library
###############################################################################

###############################################################################
# Global project requirements
###############################################################################
project
	: requirements	
		<include>.
		# disabling warning as error as we are not responsible for this code
		<warnings-as-errors>off
		<warnings>off
	: usage-requirements
		<include>.
	: build-dir $(DIST)/3rdParty/raw/obj
    ;

###############################################################################
# libraw library
###############################################################################
alias	headers		: [ glob-tree *.h ] ;

lib	raw		: 
			  [ glob src/*.cpp internal/*.cpp ]
			;

install	dist_src	: raw
			: <variant>debug:<location>$(DIST)/3rdParty/raw/bin/debug
			  <variant>release:<location>$(DIST)/3rdParty/raw/bin/release
			;

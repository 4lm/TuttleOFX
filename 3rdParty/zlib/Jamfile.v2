###############################################################################
## Main BJam makefile for z library
## author Eloi Du Bois
###############################################################################

###############################################################################
# Global project requirements
###############################################################################
project
    : requirements	
        <include>src
        <threading>multi
        <link>static
		<warnings-as-errors>off
    : usage-requirements
        <include>src
    : build-dir $(DIST)/lib/bin/zlib
    ;

###############################################################################
# z library
###############################################################################
alias headers : [ glob-tree *.h ] ;

lib zlib : 
    [ glob src/*.c ]
    ;

install dist_src	
	:	zlib
	:	<variant>debug:<location>$(DIST)/lib/zlib/debug
		<variant>release:<location>$(DIST)/lib/zlib/release
	;

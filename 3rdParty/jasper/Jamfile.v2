###############################################################################
## Main BJam makefile for libjasper library
###############################################################################

###############################################################################
# Global project requirements
###############################################################################
project
	: requirements
		<include>.
		<include>src/libjasper/include/
		# disabling warning as error as we are not responsible for this code
		<warnings-as-errors>off
		<warnings>off
	: usage-requirements
		<include>.
		<include>src/libjasper/include/
	: build-dir $(BUILD)/3rdParty/japser
    ;

###############################################################################
# libraw library
###############################################################################
alias	headers		:
			 [ glob-tree *.h ]
			;

lib	jasper	:
			 [ glob
				src/libjasper/base/*.c
				src/libjasper/bmp/*.c
				src/libjasper/jp2/*.c
				src/libjasper/jpc/*.c
				src/libjasper/jpg/*.c
				src/libjasper/mif/*.c
				src/libjasper/pgx/*.c
				src/libjasper/pnm/*.c
				src/libjasper/ras/*.c
			:
				src/libjasper/jpg/jpg_dummy.c
			 ]
			;

install dist
	:
		jasper
	:
		<location>$(DIST)/lib
		<install-type>LIB
	;
